<table class="responsive">
  <thead>
    <tr>
      <th><span data-tooltip class="has-tip" title="Click to sort by First Name"><%= link_to "First Name", sort: "first_name" %></span></th>
      <th><span data-tooltip class="has-tip" title="Click to sort by Last Name"><%= link_to "Last Name", sort: "last_name" %></th>
      <th><span data-tooltip class="has-tip" title="Click to sort by Assessment Date Name"><%= link_to "Assessment Date", sort: "assessment_date" %></th>
      <th><span data-tooltip class="has-tip" title="Click to sort by Gender"><%= link_to "Gender", sort: "gender" %></th>
      <th><span data-tooltip class="has-tip" title="Click to sort by Business Unit"><%= link_to "Business Unit", sort: "business_unit" %></th>
      <th><span data-tooltip class="has-tip" title="Click to sort by Assessment Score"><%= link_to "Score", sort: "score" %></th>
      <th> </th>
      <th> </th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.created_at.strftime("%d %b %Y") %></td>
        <td><%= student.gender %></td>
        <td><%= student.business_unit %></td>
        <td><%= student.average_score %></td>
        <td><%= link_to 'View', student_path(student.id) %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



