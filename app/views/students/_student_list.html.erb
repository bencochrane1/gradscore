<table class="responsive">
  <thead>
    <tr>
      <th width="5%">First Name</th>
      <th width="5%">Last Name</th>
      <th width="5%">Assessment Date</th>
      <th width="5%">Gender</th>
      <th width="5%">Business Unit</th>
      <th width="5%">Score</th>
      <th width="5%"> </th>
      <th width="5%"> </th>
      <th width="5%"> </th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.assessment_date %></td>
        <td><%= student.gender %></td>
        <td><%= student.business_unit %></td>
        <td><%= student.average_score %></td>
        <td><%= link_to 'View', student_path(student.id) %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



